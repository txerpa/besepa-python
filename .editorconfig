# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Docstrings and comments use max_line_length = 80
[*.py]
max_line_length = 120

[*.json]
indent_size = 2
insert_final_newline = ignore
